<% @movies.each do |movie|  %>
  <div class="card-movie">
    <%= image_tag movie.poster_url %>
      <div class="card-movie-infos">
        <div>
          <h2><%= movie.title %></h2>
          <p><%= movie.overview %></p>
        </div>
        <h2 class="card-movie-rating"><%= movie.rating %></h2>
        <%# <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-movie-user avatar-bordered" /> %>
  </div>
<% end %>
